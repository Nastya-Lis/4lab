<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/pictureElementId"
            android:layout_width="118dp"
            android:layout_height="124dp"
            android:background="@android:color/darker_gray"
            android:text="здесь должна быть картинка"
            android:textSize="20dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:orientation="vertical">

            <TextView
            android:id="@+id/nameElementId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="20dp">
        </TextView>

            <TextView
                android:id="@+id/surnameElementId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="surname"
                android:textSize="20dp">

            </TextView>

            <TextView
            android:id="@+id/ageElementId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age"
            android:textSize="20dp"
           >

        </TextView>
            <TextView
            android:id="@+id/curseElementId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="curse"
            android:textSize="20dp"
          >

        </TextView>
            <TextView
                android:id="@+id/instanceElementId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                >

            </TextView>

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>